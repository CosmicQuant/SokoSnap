{
  "name": "sokosnap-by-tumafast",
  "private": true,
  "version": "2.4.0",
  "type": "module",
  "description": "Secure social commerce platform with M-Pesa escrow integration",
  "author": "TumaFast",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "clean": "rimraf dist node_modules/.vite",
    "build:apk": "npm run build && npx cap sync android && cd android && set \"JAVA_HOME=%INIT_CWD%\\tools\\jdk-17.0.9+8\" && gradlew assembleDebug",
    "prepare": "echo 'Ready to develop!'"
  },
  "dependencies": {
    "@capacitor/android": "6.2.1",
    "@capacitor/app": "^6.0.3",
    "@capacitor/camera": "6.1.3",
    "@capacitor/cli": "6.2.1",
    "@capacitor/core": "6.2.1",
    "@capacitor/filesystem": "6.0.4",
    "@capacitor/geolocation": "6.1.1",
    "@capacitor/ios": "6.2.1",
    "@capacitor/keyboard": "^6.0.4",
    "@capacitor/share": "^6.0.4",
    "@codetrix-studio/capacitor-google-auth": "^3.4.0-rc.4",
    "@react-google-maps/api": "^2.20.8",
    "@tanstack/react-query": "^5.0.0",
    "@types/leaflet": "^1.9.21",
    "focus-trap-react": "^10.0.0",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.562.0",
    "prop-types": "^15.8.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-intersection-observer": "^10.0.2",
    "react-is": "^19.2.3",
    "react-leaflet": "^5.0.0",
    "recharts": "^3.6.0",
    "zod": "^3.24.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.5",
    "@eslint/js": "^9.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-jsx-a11y": "^6.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}
